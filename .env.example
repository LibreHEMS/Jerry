# Jerry AI Assistant - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Environment Configuration
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Security Configuration
AUTH_SECRET_KEY=your-secret-key-here-change-for-production
JWT_SECRET=your-jwt-secret-here-change-for-production
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-base64

# Web Chat Configuration
WEB_CHAT_HOST=0.0.0.0
WEB_CHAT_PORT=8004
WEB_CHAT_ALLOWED_HOSTS=localhost,127.0.0.1
WEB_CHAT_CORS_ORIGINS=http://localhost:8004
WEB_CHAT_TUNNEL_ENABLED=false
WEB_CHAT_SESSION_TIMEOUT=60

# Authentication Configuration
AUTH_ALGORITHM=HS256
AUTH_TOKEN_EXPIRY_HOURS=24
AUTH_MAX_SESSIONS_PER_USER=5
AUTH_ADMIN_EMAILS=admin@your-domain.com

# Service URLs (Internal container network)
MODEL_SERVICE_URL=http://model-service:8001
RAG_SERVICE_URL=http://rag-service:8002
AGENT_SERVICE_URL=http://agent-service:8003

# Model Configuration
MODEL_NAME=mistral-7b-instruct-v0.1.Q4_K_M.gguf
MODEL_CONTEXT_LENGTH=4096
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=512

# RAG Configuration
CHROMA_HOST=vector-db
CHROMA_PORT=8000
EMBEDDINGS_MODEL=all-MiniLM-L6-v2
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_MAX_RESULTS=5

# Agent Configuration
AGENT_MAX_ITERATIONS=10
CONVERSATION_MEMORY_SIZE=20
AGENT_MAX_CONVERSATION_LENGTH=20

# Security Settings
RATE_LIMIT_PER_MINUTE=60
SECURE_COOKIES=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Database Configuration
DATABASE_URL=sqlite:///./data/jerry.db
DATABASE_ECHO=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_JSON_FORMAT=true
LOG_FILE_PATH=./logs/jerry.log
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Data Directories
DATA_DIR=./data
LOGS_DIR=./logs

# Vector Database Configuration
VECTOR_DB_PATH=/app/data/chroma

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3
