# Jerry Model Service - CPU Only
FROM python:3.11-slim

# Security labels
LABEL maintainer="jerry@librehems.org"
LABEL description="Jerry AI Model Service - CPU Only"
LABEL version="1.0.0"

# Create non-root user
RUN groupadd -r jerry && useradd -r -g jerry -u 1000 jerry

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY pyproject.toml /app/

# Install Python dependencies (without llama-cpp-python)
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    httpx \
    requests \
    python-dotenv \
    pydantic \
    chromadb \
    langchain \
    langchain-community \
    langchain-openai \
    cryptography \
    pyjwt \
    sse-starlette \
    sentence-transformers \
    json-log-formatter \
    numpy \
    pypdf \
    websockets \
    python-multipart \
    jinja2

# Copy application code
COPY src/ /app/src/
COPY configs/ /app/configs/

# Create data directories
RUN mkdir -p /app/data /app/logs

# Change ownership
RUN chown -R jerry:jerry /app

# Switch to non-root user
USER jerry

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# Set environment variables
ENV PYTHONPATH=/app
ENV MODEL_TYPE=noop

# Run model service
CMD ["python3", "-m", "uvicorn", "src.services.model_server:app", "--host", "0.0.0.0", "--port", "8001"]
